<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.videoreg.videoreg.RegistrationController"
      stylesheets="@styles.css">

    <Label text="Авторизация / Регистрация"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="firstNameField" promptText="Имя"/>
    <TextField fx:id="lastNameField" promptText="Фамилия"/>
    <TextField fx:id="ageField" promptText="Возраст (для регистрации)"/>
    <PasswordField fx:id="passwordField" promptText="Пароль"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Войти" onAction="#onLoginClick"/>
        <Button text="Регистрация" onAction="#onRegisterClick"/>
    </HBox>

    <Label fx:id="errorLabel" styleClass="label-error"/>
</VBox>
